{
    "name": "dicr/yii2-pochta",
    "type": "yii2-extension",
    "license": "MIT",
    "description": "Pochta API для Yii2",
    "keywords": ["dicr", "yii2", "ship", "pochta"],
    "homepage": "https://gitlab.com/dicr/yii2-pochta",

    "authors": [
        {
            "name": "Igor Tarasov",
            "email": "develop@dicr.org",
            "homepage": "https://dicr.org",
            "role": "developer"
        }
    ],

    "support": {
        "source": "https://gitlab.com/dicr/yii2-pochta.git"
    },

    "autoload": {
        "psr-4": {
            "dicr\\pochta\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "dicr\\tests\\": "tests/"
        }
    },

    "minimum-stability": "stable",
    "require": {
        "php": "~8.0",
        "ext-curl": "*",

        "yiisoft/yii2": "~2.0",
        "yiisoft/yii2-httpclient": "~2.0",

        "dicr/yii2-json": "~3.0",
        "dicr/yii2-helper": "~6.0",
        "dicr/yii2-validate": "~3.0"
    },

    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "~9.5"
    },

    "repositories": [
        {"type": "composer", "url": "https://asset-packagist.org"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-json.git"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-helper.git"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-validate.git"}
    ]
}
